<h1>Bienvenue</h1>
<p>Choisissez vos produits ici </p>
<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Prix</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr> 

      
      
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        
        <td><%= link_to 'Details', shop_path(product) %></td>

        <td>
        <%= form_for @order_item, remote: true do |f| %>
       
        <%= f.hidden_field :product_id, :value => product.id %>
        <%= f.number_field :quantity, :value => 1, :min => 1 %>
        <%= f.submit "Ajouter au panier" %>
         <% end %>
        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id="card">
 <%= render 'cards/card'%>
</div>
